<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.main.MainFragment">
    <LinearLayout
        android:paddingBottom="60sp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textColor="#2BA628"
        android:text="Welcome to Bitcoin Miner"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <LinearLayout
        android:layout_margin="15sp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="0.2"
            android:background="@drawable/card_balance"
            android:layout_width="match_parent"
            android:layout_height="200sp">
            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="0.2"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:text="Your Balance"
                    android:layout_marginTop="25sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/roboto_medium"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/balanceSatoshiTxt"
                    android:textSize="30sp"
                    android:text="*** Satoshi"
                    android:layout_marginTop="32sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/roboto_medium"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/balanceBtcTxt"
                    android:text="**** BTC"
                    android:layout_marginTop="30sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/roboto_medium"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/btnStart"
                android:layout_marginEnd="-21sp"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:background="@drawable/start_button"
                android:layout_width="140sp"
                android:layout_height="140sp">
                <TextView
                    android:text="НАЧАТЬ"
                    android:fontFamily="@font/roboto_medium"
                    android:textSize="16sp"
                    android:textColor="#171224"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/progressBack"
            android:layout_marginStart="20sp"
            android:layout_weight="0.8"
            android:background="@drawable/prgorssbar_background"
            android:layout_width="match_parent"
            android:layout_height="200sp">
            <LinearLayout
                android:id="@+id/progressFront"
                android:background="@drawable/progressbar_front"
                android:layout_gravity="bottom"
                android:layout_width="match_parent"
                android:layout_height="80sp">
                <TextView
                    android:id="@+id/percentTxt"
                    android:text="25%"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:layout_marginTop="5sp"
                    android:fontFamily="@font/roboto_medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_marginStart="15sp"
        android:fontFamily="@font/roboto_medium"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:text="Используйте ускорение"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:id="@+id/btnBoost"
        android:background="@drawable/prgorssbar_background"
        android:layout_margin="15sp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60sp">
        <ImageView
            android:layout_margin="15sp"
            android:src="@drawable/rocket_img"
            android:layout_width="30sp"
            android:layout_height="30sp"/>
        <TextView
            android:text="Boost"
            android:textSize="16sp"
            android:textColor="#85DA43"
            android:gravity="center"

            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
        <Space
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="+50%"
            android:fontFamily="@font/roboto_medium"
            android:layout_marginEnd="15sp"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <TextView
        android:layout_marginStart="15sp"
        android:fontFamily="@font/roboto_medium"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:text="Активируйте мощный сервер"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:id="@+id/servers"
        android:layout_margin="15sp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/server_one"
            android:orientation="vertical"
            android:background="@drawable/server_background_gray"
            android:layout_width="80sp"
            android:layout_height="80sp">
            <ImageView
                android:layout_marginStart="8sp"
                android:layout_marginEnd="8sp"
                android:layout_marginTop="10sp"
                android:src="@drawable/speed_gray_img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Ping"
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:text="25"
                    android:textSize="16sp"
                    android:layout_marginStart="3sp"
                    android:layout_marginEnd="3sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:text="ms"
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_marginStart="13sp"
            android:orientation="vertical"
            android:background="@drawable/server_background_gray"
            android:layout_width="80sp"
            android:layout_height="80sp">
            <ImageView
                android:layout_marginStart="8sp"
                android:layout_marginEnd="8sp"
                android:layout_marginTop="10sp"
                android:src="@drawable/speed_gray_img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Ping"
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:text="12"
                    android:textSize="16sp"
                    android:layout_marginStart="3sp"
                    android:layout_marginEnd="3sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:text="ms"
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_marginStart="13sp"
            android:orientation="vertical"
            android:background="@drawable/server_background_gray"
            android:layout_width="80sp"
            android:layout_height="80sp">
            <ImageView
                android:layout_marginStart="8sp"
                android:layout_marginEnd="8sp"
                android:layout_marginTop="10sp"
                android:src="@drawable/speed_gray_img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Ping"
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:text="6"
                    android:textSize="16sp"
                    android:layout_marginStart="3sp"
                    android:layout_marginEnd="3sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:text="ms"
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_marginStart="13sp"
            android:orientation="vertical"
            android:background="@drawable/server_background_gray"
            android:layout_width="80sp"
            android:layout_height="80sp">
            <ImageView
                android:layout_marginStart="8sp"
                android:layout_marginEnd="8sp"
                android:layout_marginTop="10sp"
                android:src="@drawable/speed_gray_img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Ping"
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:text="3"
                    android:textSize="16sp"
                    android:layout_marginStart="3sp"
                    android:layout_marginEnd="3sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:text="ms"
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_marginStart="15sp"
        android:fontFamily="@font/roboto_medium"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:text="Увеличение дохода"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:id="@+id/btnOpenLink"
        android:background="@drawable/prgorssbar_background"
        android:layout_margin="15sp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60sp">
        <TextView
            android:text="Получить ВТС"
            android:textSize="16sp"
            android:textColor="#85DA43"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
    </LinearLayout>
</ScrollView>